<div class="content body-background-idea">
  <section id="page" class="">
    <div class="hd">
      <div class="idea-head">
        <div class="btn">
          <a href="./draw.html" onclick="_gaq.push(['_trackEvent', 'Click', 'create-your-idea-ig'])"><span class="btn-3d-becomeTalent2"></span></a>
        </div>
      </div>
    </div>
    <div class="bd body-background-idea-repeat">
      <div class="ideas">
        <div class="ideas-hd">
          <a onclick="_gaq.push(['_trackEvent', 'Click', 'category-all-ig'])" class="ideas-item hd-item1 <%if(_page==0){%>selected<%}%>" href="./idea.html"></a>
          <a onclick="_gaq.push(['_trackEvent', 'Click', 'category-product-ig'])" class="ideas-item hd-item2 <%if(_page==1){%>selected<%}%>" href="./idea1.html"></a>
          <a onclick="_gaq.push(['_trackEvent', 'Click', 'category-service-ig '])" class="ideas-item hd-item3 <%if(_page==2){%>selected<%}%>" href="./idea2.html"></a>
          <a onclick="_gaq.push(['_trackEvent', 'Click', 'category-digital-ig'])" class="ideas-item hd-item4 <%if(_page==3){%>selected<%}%>" href="./idea3.html"></a>
        </div>
        <div class="ideas-bd">
          <div class="dropdown idea-switchover">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="dropdown-toggle-text1" data-ref='1'>最近上传</span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#"><span class="dropdown-toggle-text2" data-ref='2'>最早上传</span></a></li>
              <li><a href="#"><span class="dropdown-toggle-text2" data-ref='3'>人气hot!</span></a></li>
              <li><a href="#"><span class="dropdown-toggle-text2" data-ref='4'>有待智猜</span></a></li>
              <%if(logined==1){%><li><a href="#"><span class="dropdown-toggle-text2" data-ref='5'>我的智猜</span></a></li><%}%>
            </ul>
          </div>
          <%for(var i=0;i<12;i++){%>
          <div class="ideas-item bd-item<%if(_page==0){%><%=i%3+1%><%}else{%><%=_page%><%}%>">
            <div class="info">
              <div class="row-fluid">
                <div class="span4"><img src="assets/images/pic_01.jpg" alt=""/></div>
                <div class="span8">
                  <p>隔壁家小明</p>
                  <p>智猜人气:<span>123</span></p>
                </div>
              </div>
              <div class="text-center">变色车</div>
              <div class="pic">
                <img src="assets/images/pic_02.jpg" alt=""/>
              </div>
            </div>
            <div class="btns">
              <div class="message-box JsPopMessage">
                <a class="message" href="javascript:void(0);"><span class="icon-message"></span></a>
                <div class="message-popup">
                  <a class="close" href="javascript:void(0);"></a>
                  <div class="mwrap">
                    <textarea name="" maxlength="200">写下您的评论...</textarea>
                    <a class="btn-submit" href="javascript:void(0);"></a>
                  </div>
                </div>
              </div>
              <div class="share">
                <%include share%>
              </div>
              <a href="javascript:void(0);" class="click-guess <%if((i%3+1)==3){%>selected disable-pointer<%}%>">
                <%if((i%3+1)==3){%>
                <span class="font-guessed"></span>
                <%}else{%>
                <span class="font-becomeTalent"></span>
                <%}%>
              </a>
            </div>
          </div>
          <%}%>
        </div>
      </div>
      <div class="wrap">
        <div class="getmore-idea"><a href="javascript:void(0);" class="btn-getmore-idea"></a></div>
        <div id="gotop"></div>
      </div>
    </div>
  </section>
</div>
<!--jsPopBox-->
<div class="pop-box">
  <a class="b-close pop-close" href="#"><span></span></a>
  <div class="pop-content">
    <p class="title">该评论含有敏感字词，请重新编写。</p>
    <div class="err">上网文凭<br> 替考<br> 赌博机<br> 顺利过<br> 考后付款 <br>香港彩<br> 传送答案</div>
  </div>
</div>
<script type="text/javascript">
  $('.pop-box').bPopup();
  (function(){
    var $dropdownMenu =  $('.idea-switchover .dropdown-menu');
    var $dropdownMenutoggle = $dropdownMenu.siblings('.dropdown-toggle');

    $dropdownMenu.click(function(e){
      $dropdownMenutoggle.find('span').html($(e.target).html());
    });
  })();
  _gaq.push(['_trackPageview', '/idea-gallery']);
</script>
